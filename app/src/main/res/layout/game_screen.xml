<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/return_game_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return Back"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="5dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/user_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/auto_question"
        tools:layout_editor_absoluteX="100dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/auto_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="176dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/check_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Check"
        app:layout_constraintTop_toBottomOf="@+id/user_answer"
        tools:layout_editor_absoluteX="161dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/answer_solution"
        android:layout_width="294dp"
        android:layout_height="43dp"
        android:layout_marginTop="44dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@+id/check_answer"
        tools:layout_editor_absoluteX="59dp" />
</androidx.constraintlayout.widget.ConstraintLayout>