<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A4CFB0">

    <TextView
        android:id="@+id/activityTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backButton" />

    <TextView
        android:id="@+id/Answer_input"
        android:layout_width="301dp"
        android:layout_height="74dp"
        android:layout_marginTop="20dp"
        android:background="#FAF8F8"
        android:text="Answer_input"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Check_answer" />

    <Button
        android:id="@+id/Answer_button"
        android:layout_width="179dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:text="CHECK"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Answer_input" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="< back"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Equation"
        android:layout_width="370dp"
        android:layout_height="98dp"
        android:layout_marginTop="80dp"
        android:text="Equation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityTitle" />

    <TextView
        android:id="@+id/Check_answer"
        android:layout_width="275dp"
        android:layout_height="82dp"
        android:layout_marginTop="44dp"
        android:background="#00F6F2F2"
        android:text="Check_answer"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Equation" />

    <TextView
        android:id="@+id/Counter"
        android:layout_width="84dp"
        android:layout_height="94dp"
        android:text="Counter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
=======
    android:id="@+id/background">

    <Button
        android:id="@+id/return_game_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Return Back"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="5dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/user_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/auto_question"
        tools:layout_editor_absoluteX="100dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/auto_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="176dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/check_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Check"
        app:layout_constraintTop_toBottomOf="@+id/user_answer"
        tools:layout_editor_absoluteX="161dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/answer_solution"
        android:layout_width="294dp"
        android:layout_height="43dp"
        android:layout_marginTop="44dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@+id/check_answer"
        tools:layout_editor_absoluteX="59dp"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>